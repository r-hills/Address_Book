<html>
    <head>
        <title>New Contact Entered</title>
        <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
    </head>
    <body>
        <div class='container'>
            <div class='row'>
                <div class='col-md-6'>
                    <h1>You created a contact!</h1>
                    <h3> {{ newcontact.getName }}!</h3>
                </div>
            </div>  <!-- End of row -->
            <div class='row'>
                <div class='col-md-6'>
                    <p> {{ newcontact.getPhone }} </p>
                </div>
            </div>  <!-- End of row -->
            <div class='row'>
                <div class='col-md-6'>
                    <p> {{ newcontact.getAddress }}</p>
                </div>
            </div> <!-- End of row -->
            <strong><a href='/'>Back to contact list</a></strong>
        </div>  <!-- End of container -->
    </body>
</html>
